# Application Configuration
APP_NAME=tm2-ingestion-service
ENV=dev
LOG_LEVEL=INFO

# CORS Configuration
ALLOW_ORIGINS=*
ALLOW_METHODS=*
ALLOW_HEADERS=*
ALLOW_CREDENTIALS=true

# MongoDB Configuration (Atlas)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DATABASE=tm2
MONGO_APPNAME=tm2-ingestion-service
MONGO_MIN_POOL_SIZE=2
MONGO_MAX_POOL_SIZE=50

# MongoDB Collections
MONGO_PRIMARY_COLLECTION=tm2_records
MONGO_AUDIT_COLLECTION=tm2_audit
MONGO_DLQ_COLLECTION=tm2_dlq
MONGO_AUDIT_TTL_DAYS=90

# OpenMRS Configuration
OPENMRS_BASE_URL=https://demo.openmrs.org/openmrs
OPENMRS_USERNAME=admin
OPENMRS_PASSWORD=Admin123
OPENMRS_TIMEOUT_SECONDS=15.0
OPENMRS_MAX_RETRIES=3
OPENMRS_RETRY_BACKOFF_BASE=0.5
OPENMRS_RETRY_BACKOFF_MAX=8.0
OPENMRS_CREATE_PATIENTS=false

# Ingestion Configuration
TM2_DATA_PATH=./data/tm2_data.csv
TM2_MAPPINGS_PATH=./tm2_mappings.json
TM2_DEFAULT_FORMAT=csv
INGESTION_BATCH_SIZE=500
ID_HASH_SALT=tm2-default-salt

# Observability
ENABLE_ACCESS_LOG=true
